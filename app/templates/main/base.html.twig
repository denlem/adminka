<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Home page{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/framework/fontawesome-4.7.0/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/framework/bootstrap-4.4.1/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/main/css/style.css') }}">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('home') }}">Главная <span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <form class="form-inline">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('admin_home') }}" class="btn btn-primary my-2 my-sm-0" type="submit">Админчасть</a>
            {% else %}
                <a href="{{ path('admin_home') }}" class="btn btn-primary my-2 my-sm-0" type="submit">Вход</a>
            {% endif %}
        </form>
    </div>
</nav>
{% block body %}{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/framework/bootstrap-4.4.1/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
